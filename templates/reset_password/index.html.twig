{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié {% endblock %}

{% block content %}
<div class = "block-small">
    {% for message in app.flashes('notice') %}
     <div class = "alert alert-info">{{ message }}</div>
    {% endfor %}
    <form method="post">
    <h1 class="h3 mb-3 font-weight-normal"> Réinitialiser votre mot de passe </h1>
    <label for="inputEmail">Email</label>
    <input type="email"  name="email" id="inputEmail"placeholder = 'Votre email svp' class="form-control" required autofocus>
   
       {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <hr>

    <button class="btn btn-success btn-block" type="submit">
        Valider
    </button>
    <hr>
    <p class = "text-center ">Ou souhaitez-vous <a href = "{{path('app_login') }}">vous connecter?</a></p>
    </form>
</div>

{% endblock %}
